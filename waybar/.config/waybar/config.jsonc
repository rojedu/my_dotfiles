  "custom/logo": {
    "format": "ó°Š ",
    "tooltip": false,
    "on-click": "wofi --show drun"
  },

  "custom/powerdown": {
    "format": "ó°¥",
    "tooltip": false,
    "on-click": "wlogout"
  },

  "custom/updates": {
    "format": "{}",
    "interval": 3600,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "return-type": "",
    "format": " {}",
    "tooltip": true,
    "tooltip-format": "{} updates available",
    "on-click": "alacritty -e paru -Syu"
  },

  "custom/clipboard": {
    "format": "ó°…",
    "interval": 1,
    "tooltip": true,
    "tooltip-format": "Clipboard History",
    "on-click": "sh -c 'cliphist list | wofi -S dmenu | cliphist decode | wl-copy'",
    "on-click-right": "cliphist wipe"
  },

