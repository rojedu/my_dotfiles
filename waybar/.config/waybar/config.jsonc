  ],
  
  "modules-right": [
    "custom/updates",
    "disk",
    "memory",
    "cpu",
    "temperature",
    "tray",
    "group/audio",
    "group/networking",
    "custom/clipboard",
    "clock",
    "custom/powerdown"
